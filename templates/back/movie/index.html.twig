{% extends 'back/layout/layout.html.twig' %}

{% block title %}Les films{% endblock %}

{% block subBody %}
    <h1>Les films</h1>
    <a href="{{ path('app_back_movie_add') }}">Créer un film</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Durée en min</th>
                <th>Date de sortie</th>
                <th>Synopsis</th>
                <th>Sommaire</th>
                <th>image</th>
                {# <th>Rating</th> #}
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.title }}</td>
                <td>{{ movie.duration }}</td>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('Y-m-d') : '' }}</td>
                <td>{{ movie.synopsis|slice(0,20) }} ...</td>
                <td>{{ movie.summary|slice(0,9) }} ...</td>
                <td><img width="30" height="50" src="{{ movie.poster }}" alt=""></td>
                {# <td>{{ movie.rating }}</td> #}
                <td>{{ movie.type }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_back_movie_show', {'id': movie.id}) }}"><i class="bi bi-eye"></i></a>
                    <a class="btn btn-warning" href="{{ path('app_back_movie_edit', {'id': movie.id}) }}"><i class="bi bi-pencil"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
